<%= form_for(:user, url: user_session_path, method: :post, class: "flex flex-col justify-center items-center") do |f| %>
  <div>
    <h1 class="text-4xl font-bold text-white text-center">Login</h2>
  </div>

  <div>
    <input type="email" name="email" placeholder="Email Address"
      class="w-full px-4 py-2 rounded-md bg-white text-gray-900 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 my-4">
  </div>

  <div>
    <input type="password" name="password" placeholder="Password"
      class="w-full px-4 py-2 rounded-md bg-white text-gray-900 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
  </div>

  <button type="submit"
    class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md transition duration-200 my-4" style="width: 100px;">
    Login
  </button>

  <div class="text-center text-gray-400 mt-2">
    Don't have an account <a class="text-blue-400 hover:text-blue-500">Sign up</a>
  </div>
<% end %>

